<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Score: 0"
        android:textSize="24sp"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/arrowUp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvScore"
        android:layout_marginTop="50dp"
        android:src="@drawable/arrow_up"
        android:contentDescription="Up Arrow" />

    <ImageView
        android:id="@+id/arrowDown"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/arrowUp"
        android:layout_marginTop="150dp"
        android:src="@drawable/arrow_down"
        android:contentDescription="Down Arrow" />

    <ImageView
        android:id="@+id/arrowLeft"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/tvScore"
        android:layout_marginTop="100dp"
        android:layout_toLeftOf="@id/arrowUp"
        android:src="@drawable/arrow_left"
        android:contentDescription="Left Arrow" />

    <ImageView
        android:id="@+id/arrowRight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/tvScore"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@id/arrowUp"
        android:src="@drawable/arrow_right"
        android:contentDescription="Right Arrow" />
</RelativeLayout>
